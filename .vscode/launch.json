  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "attach",
      "name": "Attach to @zthun/works.api",
      "port": 9229,
      "address": "0.0.0.0",
      "remoteRoot": "/usr/dev",
      "localRoot": "${workspaceFolder}",
      "sourceMapPathOverrides": {
        "/usr/dev/*": "${workspaceRoot}/*"
      }
    },
    {
      "type": "node",
      "request": "attach",
      "name": "Attach to @zthun/works.users microservice",
      "port": 9231,
      "address": "0.0.0.0",
      "remoteRoot": "/usr/dev",
      "localRoot": "${workspaceFolder}",
      "sourceMapPathOverrides": {
        "/usr/dev/*": "${workspaceRoot}/*"
      }
    },
    {
      "name": "Debug e2e Tests",
      "type": "node",
      "request": "launch",
      "console": "integratedTerminal",
      "program": "${workspaceRoot}/node_modules/@cucumber/cucumber/bin/cucumber-js",
      "args": ["--tags", "@debug"]
    }
  ]
}
