{
  "name": "@zthun/docker.services",
  "version": "1.0.0",
  "description": "An unauthenticated microservice to control a docker system on a remote machine.",
  "author": "Anthony Bonta",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/zthun/zdocker.services"
  },
  "main": "dist/app/main.js",
  "scripts": {
    "clean": "rimraf dist",
    "start": "node dist/app/main.js",
    "lint": "zlint",
    "test": "jest --coverage",
    "build": "tsc -p ./tsconfig.prod.json",
    "make": "npm run clean && npm run lint && npm run test && npm run build",
    "debug": "nodemon"
  },
  "dependencies": {
    "@nestjs/common": "=5.4.1",
    "@nestjs/core": "=5.4.1",
    "lodash": "=4.17.11",
    "oauth2-server": "=3.0.1",
    "reflect-metadata": "=0.1.12",
    "rxjs": "=6.3.3"
  },
  "devDependencies": {
    "@types/express": "=4.16.0",
    "@types/jest": "=23.3.10",
    "@types/lodash": "=4.14.118",
    "@types/node": "=10.12.11",
    "@types/oauth2-server": "=3.0.10",
    "@zthun/web-styles": "=6.1.1",
    "acorn": "=6.0.4",
    "jest": "=23.6.0",
    "nodemon": "=1.18.7",
    "rimraf": "=2.6.2",
    "ts-jest": "=23.10.5",
    "ts-node": "=7.0.1",
    "typescript": "=3.2.1"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "globals": {
      "ts-jest": {
        "tsConfig": "./tsconfig.spec.json"
      }
    },
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../dist/coverage",
    "testEnvironment": "node"
  },
  "zlint": {
    "tsFiles": [
      "src/**/*.ts"
    ],
    "jsonFiles": [
      "./*.json",
      "src/**/*.json"
    ],
    "yamlFiles": [
      "./*.yml"
    ]
  }
}