{
  "name": "@zthun/auth",
  "version": "1.0.0",
  "description": "An unauthenticated microservice that manages authentication using oauth2.",
  "author": "Anthony Bonta",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/zthun/zauth"
  },
  "main": "dist/app/main.js",
  "scripts": {
    "clean": "rimraf dist",
    "start": "node dist/app/main.js",
    "lint": "zlint",
    "test": "jest --coverage",
    "build": "tsc -p ./tsconfig.prod.json",
    "make": "npm run clean && npm run lint && npm run test && npm run build",
    "debug": "nodemon"
  },
  "dependencies": {
    "@nestjs/common": "=5.7.3",
    "@nestjs/core": "=5.7.3",
    "@types/jsonwebtoken": "^8.3.2",
    "@zthun/dal": "=1.0.0",
    "bcrypt": "=3.0.5",
    "jsonwebtoken": "^8.5.1",
    "lodash": "=4.17.11",
    "oauth2-server": "=3.0.1",
    "randomatic": "^3.1.1",
    "reflect-metadata": "=0.1.13",
    "rxjs": "=6.4.0",
    "uuid": "=3.3.2"
  },
  "devDependencies": {
    "@types/bcrypt": "=3.0.0",
    "@types/express": "=4.16.1",
    "@types/jest": "=24.0.9",
    "@types/lodash": "=4.14.121",
    "@types/node": "=11.10.4",
    "@types/oauth2-server": "=3.0.10",
    "@types/uuid": "=3.4.4",
    "@zthun/web-styles": "=7.0.0",
    "acorn": "=6.1.1",
    "jest": "=24.1.0",
    "mongodb-memory-server": "=3.1.2",
    "nodemon": "=1.18.10",
    "rimraf": "=2.6.3",
    "ts-jest": "=24.0.0",
    "ts-node": "=8.0.2",
    "typescript": "=3.3.3333"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "globals": {
      "ts-jest": {
        "tsConfig": "./tsconfig.spec.json"
      }
    },
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../dist/coverage",
    "testEnvironment": "node"
  },
  "zlint": {
    "tsFiles": [
      "src/**/*.ts"
    ],
    "jsonFiles": [
      "./*.json",
      "src/**/*.json"
    ],
    "yamlFiles": [
      "./*.yml"
    ]
  }
}
