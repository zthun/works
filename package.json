{
  "name": "@zthun/auth",
  "version": "1.0.0-0",
  "description": "A microapplication that supports the oauth2 workflow in a distributed environment for first party applications.",
  "author": "Anthony Bonta",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/zthun/zauth"
  },
  "scripts": {
    "bootstrap": "npm install && lerna bootstrap --hoist",
    "clean": "rimraf dist reports *.tgz packages/**/dist packages/**/*.tgz",
    "test": "jest --coverage --runInBand",
    "lint": "zlint",
    "debug:client": "ng build --project zauth.angular --configuration debug && ng serve --project zauth.client",
    "debug:server": "lerna run debug --stream",
    "build:client": "ng build --project zauth.angular && ng build --project zauth.client",
    "build:server": "lerna run build --stream",
    "build": "npm run build:server && npm run build:client",
    "publish": "lerna run publish",
    "make": "npm run clean && npm run lint && npm run test && npm run build"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "=0.13.8",
    "@angular-devkit/build-ng-packagr": "=0.13.8",
    "@angular/animations": "=7.2.14",
    "@angular/cdk": "=7.3.7",
    "@angular/cli": "=7.3.8",
    "@angular/common": "=7.2.14",
    "@angular/compiler": "=7.2.14",
    "@angular/compiler-cli": "=7.2.14",
    "@angular/core": "=7.2.14",
    "@angular/forms": "=7.2.14",
    "@angular/http": "=7.2.14",
    "@angular/language-service": "=7.2.14",
    "@angular/material": "=7.3.7",
    "@angular/platform-browser": "=7.2.14",
    "@angular/platform-browser-dynamic": "=7.2.14",
    "@angular/router": "=7.2.14",
    "@types/bcrypt": "=3.0.0",
    "@types/express": "=4.16.1",
    "@types/jest": "=24.0.11",
    "@types/lodash": "=4.14.123",
    "@types/node": "=11.13.8",
    "@types/uuid": "=3.4.4",
    "@zthun/web-styles": "=7.0.2",
    "acorn": "=6.1.1",
    "ajv": "=6.10.0",
    "classlist.js": "=1.1.20150312",
    "codelyzer": "=5.0.1",
    "core-js": "=2.6.5",
    "jest": "=24.7.1",
    "lerna": "=3.13.4",
    "lodash": "=4.17.11",
    "ng-packagr": "=4.7.1",
    "nodemon": "=1.18.11",
    "reflect-metadata": "=0.1.13",
    "rimraf": "=2.6.3",
    "rollup": "=1.10.1",
    "rollup-plugin-terser": "=4.0.4",
    "rollup-plugin-typescript": "=1.0.1",
    "rxjs": "=6.5.1",
    "ts-jest": "=24.0.2",
    "ts-node": "=8.1.0",
    "tsickle": "=0.34.0",
    "tslib": "=1.9.3",
    "typescript": "=3.2.4",
    "uuid": "=3.3.2",
    "zone.js": "=0.8.29"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfig": "./tsconfig.spec.json"
      }
    },
    "rootDir": "packages",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "moduleNameMapper": {
      "@zthun/auth.core": "<rootDir>/zauth.core/src/index",
      "@zthun/auth.angular": "<rootDir>/zauth.angular/src/index"
    },
    "coverageDirectory": "../reports/coverage",
    "testEnvironment": "node"
  },
  "zlint": {
    "tsFiles": [
      "packages/zauth.angular/src/**/*.ts",
      "packages/zauth.client/src/**/*.ts",
      "packages/zauth.core/src/**/*.ts",
      "packages/zauth.server/src/**/*.ts"
    ],
    "esFiles": [
      "packages/zauth.core/*.js"
    ],
    "sassFiles": [
      "packages/zauth.angular/src/**/*.scss",
      "packages/zauth.client/src/**/*.scss"
    ],
    "htmlFiles": [
      "packages/zauth.angular/src/**/*.html",
      "packages/zauth.client/src/**/*.html"
    ],
    "jsonFiles": [
      "*.json",
      "packages/zauth.angular/*.json",
      "packages/zauth.client/*.json",
      "packages/zauth.core/*.json",
      "packages/zauth.server/*.json"
    ],
    "yamlFiles": [
      "./*.yml"
    ]
  }
}
