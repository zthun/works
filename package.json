{
  "name": "@zthun/auth",
  "version": "0.0.0",
  "description": "A microapplication that supports the oauth2 workflow in a distributed environment for first party applications.",
  "author": "Anthony Bonta",
  "license": "MIT",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/zthun/zauth"
  },
  "workspaces": [
    "packages/zauth.core",
    "packages/zauth.client",
    "packages/zauth.server"
  ],
  "scripts": {
    "clean": "rimraf dist reports *.tgz packages/**/dist packages/**/*.tgz",
    "test": "jest --coverage --runInBand --forceExit",
    "lint": "zlint",
    "build": "lerna run build --stream",
    "make": "yarn clean && yarn lint && yarn test && yarn build",
    "debug:client": "yarn --cwd packages/zauth.client run debug",
    "debug:server": "yarn --cwd packages/zauth.server run debug"
  },
  "devDependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.2.22",
    "@fortawesome/free-solid-svg-icons": "^5.10.2",
    "@fortawesome/react-fontawesome": "^0.1.4",
    "@material-ui/core": "^4.3.3",
    "@types/bcryptjs": "^2.4.2",
    "@types/enzyme": "^3.10.3",
    "@types/enzyme-adapter-react-16": "^1.0.5",
    "@types/express": "^4.0.0",
    "@types/jest": "^25.2.1",
    "@types/jsdom": "^16.2.1",
    "@types/lodash": "^4.0.0",
    "@types/node": "^13.1.1",
    "@types/react": "^16.9.2",
    "@types/react-dom": "^16.9.0",
    "@types/react-router-dom": "^5.1.3",
    "@types/react-test-renderer": "^16.9.0",
    "@types/url-parse": "^1.4.3",
    "@types/uuid": "^7.0.2",
    "@zthun/auth.core": "link:../zauth.core",
    "@zthun/web-styles": "^7.1.1",
    "awesome-typescript-loader": "^5.2.1",
    "axios": "^0.19.0",
    "css-loader": "^3.2.0",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.15.1",
    "html-webpack-plugin": "^4.2.0",
    "jest": "^25.3.0",
    "jest-createspyobj": "^1.2.2",
    "jsdom": "^16.2.2",
    "lerna": "^3.0.0",
    "less": "^3.10.3",
    "less-loader": "^6.0.0",
    "nodemon": "^2.0.1",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-router-dom": "^5.0.1",
    "rimraf": "^3.0.0",
    "style-loader": "^1.0.0",
    "ts-jest": "^25.3.1",
    "ts-node": "^8.0.0",
    "typescript": "^3.5.3",
    "url-parse": "^1.4.7",
    "webpack": "^4.39.2",
    "webpack-cli": "^3.3.7",
    "webpack-dev-server": "^3.8.0"
  }
