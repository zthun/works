{
  "name": "@zthun/auth",
  "version": "0.0.0",
  "description": "A microapplication that supports the oauth2 workflow in a distributed environment for first party applications.",
  "author": "Anthony Bonta",
  "license": "MIT",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/zthun/zauth"
  },
  "scripts": {
    "clean": "rimraf dist reports *.tgz packages/**/dist packages/**/*.tgz",
    "test": "jest --coverage --runInBand",
    "lint": "zlint",
    "client": "lerna run client --stream",
    "server": "lerna run server --stream",
    "build": "lerna run build --stream",
    "make": "npm run clean && npm run lint && npm run test && npm run build",
    "release": "npm run make && lerna publish",
    "playground": "angular-playground"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.13.0",
    "@angular-devkit/build-ng-packagr": "~0.13.0",
    "@angular/animations": "^7.0.0",
    "@angular/cdk": "^7.0.0",
    "@angular/cli": "^7.0.0",
    "@angular/common": "^7.0.0",
    "@angular/compiler": "^7.0.0",
    "@angular/compiler-cli": "^7.0.0",
    "@angular/core": "^7.0.0",
    "@angular/forms": "^7.0.0",
    "@angular/material": "^7.0.0",
    "@angular/platform-browser": "^7.0.0",
    "@angular/platform-browser-dynamic": "^7.0.0",
    "@angular/service-worker": "^7.0.0",
    "@nestjs/common": "^6.0.0",
    "@nestjs/core": "^6.0.0",
    "@nestjs/platform-express": "^6.0.0",
    "@types/bcrypt": "^3.0.0",
    "@types/express": "^4.0.0",
    "@types/jest": "^24.0.0",
    "@types/lodash": "^4.0.0",
    "@types/node": "^11.0.0",
    "@types/uuid": "^3.0.0",
    "@zthun/auth.angular": "file:./packages/zauth.angular",
    "@zthun/auth.core": "file:./packages/zauth.core",
    "@zthun/dal": "^1.0.0",
    "@zthun/web-styles": "^7.0.0",
    "acorn": "^6.0.0",
    "ajv": "^6.0.0",
    "angular-playground": "^5.0.0",
    "bcrypt": "^3.0.0",
    "bootstrap-sass": "^3.0.0",
    "classlist.js": "^1.0.0",
    "codelyzer": "^5.0.0",
    "core-js": "^2.0.0",
    "jest": "^24.0.0",
    "lerna": "^3.0.0",
    "moment": "^2.0.0",
    "ng-packagr": "^4.0.0",
    "nodemon": "^1.0.0",
    "reflect-metadata": "~0.1.0",
    "rimraf": "^2.0.0",
    "rollup": "^1.0.0",
    "rollup-plugin-terser": "^4.0.0",
    "rollup-plugin-typescript2": "^0.21.0",
    "rxjs": "^6.0.0",
    "ts-jest": "~24.0.0",
    "ts-node": "~8.1.0",
    "tsickle": "=0.34.2",
    "tslib": "~1.9.0",
    "typescript": "~3.2.0",
    "uuid": "^3.0.0",
    "zone.js": "~0.8.0"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfig": "./tsconfig.spec.json"
      }
    },
    "rootDir": "packages",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "modulePathIgnorePatterns": [
      "<rootDir>/zauth.core/dist",
      "<rootDir>/zauth.angular/dist"
    ],
    "moduleNameMapper": {
      "@zthun/auth.core": "<rootDir>/zauth.core/src/index",
      "@zthun/auth.angular": "<rootDir>/zauth.angular/src/index"
    },
    "coverageDirectory": "../reports/coverage",
    "testEnvironment": "node"
  },
  "zlint": {
    "tsFiles": [
      "packages/zauth.angular/src/**/*.ts",
      "packages/zauth.client/src/**/*.ts",
      "packages/zauth.core/src/**/*.ts",
      "packages/zauth.server/src/**/*.ts"
    ],
    "esFiles": [
      "packages/zauth.core/*.js"
    ],
    "sassFiles": [
      "packages/zauth.angular/src/**/*.scss",
      "packages/zauth.client/src/**/*.scss"
    ],
    "htmlFiles": [
      "packages/zauth.angular/src/**/*.html",
      "packages/zauth.client/src/**/*.html"
    ],
    "jsonFiles": [
      "*.json",
      "packages/zauth.angular/*.json",
      "packages/zauth.client/*.json",
      "packages/zauth.core/*.json",
      "packages/zauth.server/*.json"
    ],
    "yamlFiles": [
      "./*.yml"
    ]
  },
  "dependencies": {
    "rollup-plugin-typescript": "^1.0.1"
  }
}
