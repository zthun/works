{
  "name": "@zthun/auth",
  "version": "0.0.0",
  "description": "A microapplication that supports the oauth2 workflow in a distributed environment for first party applications.",
  "author": "Anthony Bonta",
  "license": "MIT",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/zthun/zauth"
  },
  "workspaces": [
    "packages/zauth.core",
    "packages/zauth.client",
    "packages/zauth.server"
  ],
  "scripts": {
    "clean": "rimraf dist reports *.tgz packages/**/dist packages/**/*.tgz",
    "test": "jest --coverage --runInBand --forceExit",
    "lint": "zlint",
    "build": "lerna run build --stream",
    "make": "yarn clean && yarn lint && yarn test && yarn build",
    "debug:client": "yarn --cwd packages/zauth.client run debug",
    "debug:server": "yarn --cwd packages/zauth.server run debug"
  },
  "devDependencies": {
    "@types/jest": "^25.2.1",
    "@types/jsdom": "^16.2.1",
    "@types/node": "^13.1.1",
    "@zthun/web-styles": "^7.1.1",
    "jest": "^25.3.0",
    "jest-createspyobj": "^1.2.2",
    "jsdom": "^16.2.2",
    "lerna": "^3.0.0",
    "rimraf": "^3.0.0",
    "ts-jest": "^25.3.1",
    "ts-node": "^8.0.0",
    "typescript": "^3.5.3"
  }
}
