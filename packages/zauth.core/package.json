{
  "name": "@zthun/auth.core",
  "version": "1.0.0-0",
  "description": "The core share package in the zauth platform that shares source between the server and client.",
  "author": "Anthony Bonta",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/zthun/zauth"
  },
  "scripts": {
    "clean": "rimraf dist",
    "start": "node dist/app/main.js",
    "lint": "zlint",
    "test": "jest --coverage",
    "build": "tsc -p ./tsconfig.prod.json",
    "make": "npm run clean && npm run lint && npm run test && npm run build",
    "debug": "nodemon"
  },
  "dependencies": {
    "moment": "=2.24.0"
  },
  "devDependencies": {
    "@types/jest": "=24.0.11",
    "@types/node": "=11.13.4",
    "@zthun/web-styles": "=7.0.0",
    "acorn": "=6.1.1",
    "jest": "=24.7.1",
    "rimraf": "=2.6.3",
    "ts-jest": "=24.0.2",
    "ts-node": "=8.1.0",
    "typescript": "=3.4.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "globals": {
      "ts-jest": {
        "tsConfig": "./tsconfig.spec.json"
      }
    },
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../dist/coverage",
    "testEnvironment": "node"
  },
  "zlint": {
    "tsFiles": [
      "src/**/*.ts"
    ],
    "jsonFiles": [
      "./.json",
      "src/**/*.json"
    ]
  }
}
