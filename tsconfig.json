{
  "compilerOptions": {
    "module": "commonjs",
    "baseUrl": "packages",
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": true,
    "outDir": "dist/packages",
    "target": "es6",
    "sourceMap": true,
    "paths": {
      "@zthun/auth.core": [
        "zauth.core/src/index"
      ]
    }
  },
  "include": [
    "**/*.ts"
  ]
}
