{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": "packages",
    "module": "esnext",
    "inlineSourceMap": true,
    "target": "esnext",
    "paths": {
      "@zthun/auth.core": ["zauth.core/src/index"],
      "@zthun/auth.server": ["zauth.server/src/index"],
      "@zthun/auth.client": ["zauth.client/src/index"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["**/node_modules/**"]
}
